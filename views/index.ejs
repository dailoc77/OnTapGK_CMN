<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh mục các bài báo</title>
    <style>
      table {
        width: 100%;
        border-collapse: collapse;
      }
      th,
      td {
        border: 1px solid #000;
        padding: 8px;
        text-align: left;
      }
      th {
        background-color: #f2f2f2;
      }
      .forms-container {
        display: flex;
      }

      .form-group {
        flex: 1; /* Cân bằng độ rộng giữa hai form */
      }

      form label,form input {
        display: block; /* Đảm bảo các nhãn và ô nhập liệu xuống dòng */
      }
      tr:hover {
        background-color: #fff0e6;
        cursor: pointer;
      }
    </style>
    <script>
      function populateEditForm(
        stt,
        tenBaiBao,
        nhomTacGia,
        isbn,
        soTrang,
        namXuatBan
      ) {
        document.getElementById("EditTenBaiBao").value = tenBaiBao;
        document.getElementById("EditNhomTacGia").value = nhomTacGia;
        document.getElementById("EditISBN").value = isbn;
        document.getElementById("EditSoTrang").value = soTrang;
        document.getElementById("EditNamXuatBan").value = namXuatBan;
      }
    </script>
  </head>

  <body>
    <h1>Nhà xuất bản ABZ</h1>
    <h2>Danh mục các bài báo</h2>

    <table>
      <thead>
        <tr>
          <th>STT</th>
          <th>Tên bài báo</th>
          <th>Tên nhóm tác giả</th>
          <th>Chỉ số ISBN</th>
          <th>Số trang</th>
          <th>Năm xuất bản</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach((item) => { %>
        <tr
          onclick="populateEditForm(
                    '<%= item.STT %>',
                    '<%= item.TenBaiBao %>',
                    '<%= item.TenNhomTacGia %>',
                    '<%= item.ISBN %>',
                    '<%= item.SoTrang %>',
                    '<%= item.NamXuatBan %>'
                )"
        >
          <td><%= item.STT %></td>
          <td><%= item.TenBaiBao %></td>
          <td><%= item.TenNhomTacGia %></td>
          <td><%= item.ISBN %></td>
          <td><%= item.SoTrang %></td>
          <td><%= item.NamXuatBan %></td>
          <td>
            <form
              action="/delete"
              method="POST"
              onsubmit="return confirm('Bạn có chắc chắn muốn xóa bài báo này không?')"
            >
              <input type="hidden" name="ISBN" value="<%= item.ISBN %>" />
              <button type="submit">Xóa</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <br />
    <div class="forms-container">
        <div class="form-group">
            <h3>Thêm bài báo mới</h3>
            <form action="/add" method="POST">
                <label for="TenBaiBao">Tên bài báo:</label>
                <input type="text" id="TenBaiBao" name="TenBaiBao" required><br>
    
                <label for="NhomTacGia">Tên nhóm tác giả:</label>
                <input type="text" id="NhomTacGia" name="TenNhomTacGia" required><br>
    
                <label for="ISBN">Chỉ số ISBN:</label>
                <input type="text" id="ISBN" name="ISBN" required><br>
    
                <label for="SoTrang">Số trang:</label>
                <input type="number" id="SoTrang" name="SoTrang" required><br>
    
                <label for="NamXuatBan">Năm xuất bản:</label>
                <input type="number" id="NamXuatBan" name="NamXuatBan" required><br>
    
                <button type="submit">Thêm bài báo</button>
            </form>
        </div>
    
        <div class="form-group">
            <h3>Sửa bài báo</h3>
            <form action="/update" method="POST">
                <label for="EditTenBaiBao">Tên bài báo:</label>
                <input type="text" id="EditTenBaiBao" name="TenBaiBao" required><br>
    
                <label for="EditNhomTacGia">Tên nhóm tác giả:</label>
                <input type="text" id="EditNhomTacGia" name="TenNhomTacGia" required><br>
    
                <label for="EditISBN">Chỉ số ISBN:</label>
                <input type="text" id="EditISBN" name="ISBN" readonly><br>
    
                <label for="EditSoTrang">Số trang:</label>
                <input type="number" id="EditSoTrang" name="SoTrang" required><br>
    
                <label for="EditNamXuatBan">Năm xuất bản:</label>
                <input type="number" id="EditNamXuatBan" name="NamXuatBan" required><br>
    
                <button type="submit">Sửa bài báo</button>
            </form>
        </div>
    </div>
    
  </body>
</html>
