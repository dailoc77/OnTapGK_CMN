<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Table Example</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        th,
        td {
            border: 1px solid #000;
            padding: 8px;
            text-align: left;
        }
        
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>

<body>
    <table>
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên bài báo</th>
                <th>Tên nhóm tác giả</th>
                <th>Chỉ số ISBN</th>
                <th>Số trang</th>
                <th>Năm xuất bản</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((item, index) => { %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                    <td>
                        <%= item.title %>
                    </td>
                    <td>
                        <%= item.authors %>
                    </td>
                    <td>
                        <%= item.isbn %>
                    </td>
                    <td>
                        <%= item.pages %>
                    </td>
                    <td>
                        <%= item.year %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</body>

</html>